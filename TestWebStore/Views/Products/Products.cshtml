@using TestWebStore.Models.ViewModels;

@model List<ProductViewModel>;

<div class="products-container">
    <form asp-area="" asp-controller="Products" asp-action="SearchProducts" method="get">
        <input name="name" class="form-control" placeholder="Название продукта" />
        <button type="submit">
            Поиск
        </button>
    </form>

    @foreach (var product in Model)
    {
        <div class="product-container">
            <div class="product-info-container">
                <label>@product.Name</label>
                <p>@product.Description</p>
                <p>@product.Price руб.</p>
                <p>@product.InStock шт.</p>
                <p>@product.Category</p>
            </div>
            <a asp-area="" asp-controller="Products" asp-action="EditProduct" asp-route-id="@product.Id" method="get">
                <button type="submit">
                    Редактировать
                </button>
            </a>
            <form asp-area="" asp-controller="Products" asp-action="RemoveProduct" asp-route-id="@product.Id" method="post">
                <button type="submit">
                    Удалить
                </button>
            </form>
        </div>
    }
</div>
